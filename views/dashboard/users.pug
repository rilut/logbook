extends ../layout

block content
  .page-header
    include partials/header
    h3 Admin Dashboard

  p.lead Users
  table.table.table-striped.table-hover.table-bordered
    tr
      th.text-center.col-sm-4 Name
      th.text-center.col-sm-3 Email
      th.text-center.col-sm-2 Type
      th.text-center.col-sm-2 Reset Password
      th.text-center.col-sm-1 #
    tr
      td Giacomo Gullizoni
      td giacomo@spgg.org.sg
      td Supervisor
      td.text-center
        button.btn.btn-default(type='button') Reset to Default
      td.text-center
        button.btn.btn-link.btn-danger(
          type='button',
          onclick='return confirm("Are you sure you want to delete this item?");'
        )
          i.fa.fa-trash
    tr
      td Marco Botton
      td marco@spgg.org.sg
      td Operator
      td.text-center
        button.btn.btn-default(type='button') Reset to Default
      td.text-center
        button.btn.btn-link.btn-danger(
          type='button',
          onclick='return confirm("Are you sure you want to delete this item?");'
        )
          i.fa.fa-trash
    tr
      td Mariah Maclachlan
      td mariah@spgg.org.sg
      td Operator
      td.text-center
        button.btn.btn-default(type='button') Reset to Default
      td.text-center
        button.btn.btn-link.btn-danger(
          type='button',
          onclick='return confirm("Are you sure you want to delete this item?");'
        )
          i.fa.fa-trash

  p.lead Add a New Approved Non-Member
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='name') Name*
      .col-sm-7
        input.form-control(
          type='text',
          name='name',
          id='name',
          placeholder='Name',
          autofocus,
          required
        )
    .form-group
      label.col-sm-3.control-label(for='email') Email*
      .col-sm-7
        input.form-control(
          type='email',
          name='email',
          id='email',
          placeholder='Email',
          autofocus,
          required
        )
    .form-group
      label.col-sm-3.control-label(for='type') Type*
      .col-sm-7
        select.form-control(name='type', required)
          option(value='0') Supervisor
          option(value='1') Operator
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit') Submit
