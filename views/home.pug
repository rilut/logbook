extends layout

block content
  .row
    .col-sm-12.text-center.center-screen
      h1 SPGG
      p.lead To sign in or sign out, scan your NRIC/FIN
      .col-md-4.col-md-offset-4
        form
          .input-group
            input.form-control#inputField(type='text', placeholder='', autofocus=true, onfocusout="focusInput()")
            |     
            .input-group-btn
              button.btn.btn-default(type='submit')
                i.fa.fa-barcode
    
    script.
      function focusInput () {
        document.getElementById('inputField').focus()
      }

     
    
